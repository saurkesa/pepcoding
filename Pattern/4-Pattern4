/* output
  
  *	*	*	*	*	
	*	*	*	*	
		*	*	*	
			*	*	
				*
 */
public class Pattern4 {

	public static void main(String[] args) {

		Scanner s1 = new Scanner(System.in);

		int n = s1.nextInt();
		int star = n;
		int space = 0;

		for (int i = 1; i <= n; i++) {
			for (int k = 1; k <= space; k++) {
				System.out.print("\t");
			}
			for (int j = 1; j <= star; j++) {
				System.out.print("*\t");
			}

			space++;
			star--;
			System.out.println();
		}

	}

}
